set name=pkg.fmri \
    value=pkg:/media/celluloid@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary \
    value="Celluloid (formerly GNOME MPV) is a simple GTK+ frontend for mpv."
set name=pkg.description \
    value="Celluloid interacts with mpv via the client API exported by libmpv, allowing access to mpv's powerful playback capabilities."
